<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.moodcalendar.mapper.UserMapper">

  <!-- 여기에 쿼리들 작성 -->
  <insert id="insertUser" parameterType="com.example.moodcalendar.domain.User" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO users (id, nickname, email, password, created_at, updated_at)
      VALUES (#{id}, #{nickname}, #{email}, #{password}, #{createdAt}, #{updatedAt})
  </insert>

  <delete id="deleteUserById" parameterType="long">
    DELETE FROM users
    WHERE  id = #{id}
  </delete>

  <update id="updateUser" parameterType="com.example.moodcalendar.domain.User" >
    UPDATE users
    <set>
      <if test="email != null">
        email   = #{email},
      </if>
      <if test="nickname != null">
        nickname = #{nickname},
      </if>
      <if test="password != null and password != ''">
        password  = #{password},
      </if>
      updated_at  = NOW()
    </set>
    WHERE id    = #{id}
  </update>

  <select id="selectUserById" parameterType="long" resultType="com.example.moodcalendar.domain.User">
    SELECT *
      FROM users
     WHERE id = #{id}
  </select>

  <select id="selectUserByEmail" parameterType="string" resultType="com.example.moodcalendar.domain.User">
    SELECT *
      FROM users
      WHERE email = #{email}
  </select>

</mapper>
